<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/logo_ico"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/logo" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/shadowColor"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Lets Gets Started!!"
        android:layout_marginTop="@dimen/_30sdp"
        android:textColor="@color/brown"
        android:textSize="@dimen/_22sdp"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:text="Choose anyone of these vehicle types to apply their services"
        android:textColor="@color/dialog_text"
        android:textSize="@dimen/_15sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center|center_horizontal|center_vertical"

        android:paddingLeft="@dimen/_25sdp"
        android:paddingRight="@dimen/_25sdp">





            <ImageView
                android:layout_width="@dimen/_87sdp"
                android:layout_height="@dimen/_87sdp"
                android:src="@drawable/truckn"
                android:layout_gravity="center"
                android:id="@+id/image_truck"
                android:layout_marginLeft="@dimen/_20sdp"
                android:padding="20dp"
                android:background="@drawable/round_bu"
                />






            <ImageView
                android:layout_width="@dimen/_87sdp"
                android:layout_height="@dimen/_87sdp"
                android:src="@drawable/busn"
                android:layout_gravity="center"

                android:layout_marginLeft="@dimen/_50sdp"
                android:id="@+id/image_bus"

                android:padding="15dp"
                android:background="@drawable/round_bu"
                />



    </LinearLayout>


