<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorStatus</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="asdf" parent="Base.TextAppearance.AppCompat.Widget.Switch">
        <item name="colorAccent">@color/redColor</item>
        <item name="android:thumb">@color/redColor</item>
    </style>

    <style name="AppThemes" parent="AppTheme">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#f2f2f2</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">2sp</item>
    </style>

    <style name="Material.Widget.Switch">
        <item name="sw_trackSize">14dp</item>
        <item name="sw_trackCap">round</item>
        <item name="sw_thumbRadius">10dp</item>
        <item name="sw_thumbElevation">2dp</item>
        <item name="sw_animDuration">@android:integer/config_shortAnimTime</item>
        <item name="sw_interpolator">@android:anim/decelerate_interpolator</item>
    </style>

    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/ColorStatus</item>
        <item name="colorPrimaryDark">@color/redColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tabindicator">
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/oror</item>
        <item name="android:textColorPrimary">@color/or2</item>
    </style>

    <style name="ted_pick_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/oror</item>
        <item name="colorPrimaryDark">@color/brown</item>
        <item name="colorAccent">@color/brown</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="spin2" parent="Material.Widget.Spinner.Light">
        <item name="rd_style">@style/wave1</item>
        <item name="spn_labelEnable">true</item>
        <item name="spn_arrowSwitchMode">true</item>
        <item name="spn_labelTextColor">@color/textColor</item>
        <item name="spn_arrowSize">10dp</item>
        <item name="spn_arrowPadding">10dp</item>
        <item name="spn_labelTextSize">@dimen/_15sdp</item>
        <item name="spn_dividerHeight">@dimen/_1sdp</item>
        <item name="spn_dividerColor">#E1E1E1</item>
        <item name="spn_arrowAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="spn_arrowColor">@color/brown</item>
        <item name="spn_popupItemAnimation">@anim/abc_slide_in_bottom</item>
        <item name="spn_popupItemAnimOffset">120</item>
        <item name="android:popupBackground">#f7fdfdfd</item>
    </style>

    <style name="wave1" parent="Material.Drawable.Ripple.Touch">
        <item name="rd_maxRippleRadius">48dp</item>
        <item name="rd_rippleColor">#e7ecc9ca</item>
        <item name="rd_rippleAnimDuration">200</item>
        <item name="rd_rippleType">wave</item>
    </style>


    <style name="spin32" parent="Material.Widget.Spinner.Light">
        <item name="rd_style">@style/wave</item>
        <item name="spn_popupItemAnimation">@anim/abc_slide_in_bottom</item>
        <item name="spn_popupItemAnimOffset">120</item>
    </style>


    <style name="wave" parent="Material.Drawable.Ripple.Touch">
        <item name="rd_maxRippleRadius">48dp</item>
        <item name="rd_rippleColor">@color/gold</item>
        <item name="rd_rippleAnimDuration">200</item>
        <item name="rd_rippleType">touch</item>
    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/pink</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>



</resources>
